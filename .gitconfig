[user]
	email = alphagma@gmail.com
	name = Alpha
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[mergetool]
	keepBackup = false
[core]
	autocrlf = false
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Monokai Extended
	line-numbers = true
	navigate = true

[interactive]
	diffFilter = delta --color-only

